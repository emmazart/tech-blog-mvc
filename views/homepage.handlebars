<section>
    <h2>Recent Posts</h2>
    {{#each blogposts as |post|}}
    <article>
        <h3>{{post.title}}</h3>
        <p>Posted by: {{post.user.username}}</p>
        <p class="created-at">{{post.created_at}}</p>
        
        {{!-- Iterate through comments array on each post --}}
        {{#each post.comments}} 
            <p>{{this.comment_text}}</p>
            {{!-- if no comments --}}
            {{else}}
            <p>Be the first to comment!</p>
        {{/each}}

    </article>
    {{/each}}
</section>
<section>
    {{!-- if the user has clicked on a blogpost, render this partial --}}
    {{> singlepost}}
</section>